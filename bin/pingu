#!/usr/bin/env python3
from argparse import ArgumentParser
from datetime import datetime as dt
from time import sleep
from ping3 import ping


COLOR_RESET  = "\033[0m"
COLOR_WHITE1 = "\033[38;5;255m"
COLOR_WHITE2 = "\033[38;5;251m"
COLOR_RED    = "\033[1;31m"
COLOR_GREEN  = "\033[1;32m"


def verbose_ping(args):
    c = 0
    while True:
        time = ping(args.host, size=args.size, timeout=args.timeout, unit="ms")
        ts = dt.now()
        c += 1
        COLOR_WHITE = COLOR_WHITE2 if c % 2 == 0 and args.alter_fg else COLOR_WHITE1

        if time is not None:
            time = round(time, 2)
            print(f"{COLOR_WHITE}{ts} {COLOR_GREEN}OK{COLOR_WHITE} {args.host} seq={c} size={args.size} time={time:.2f} ms{COLOR_RESET}")
            sleep(args.interval-time/1000)
        else:
            print(f"{COLOR_WHITE}{ts} {COLOR_RED}NG{COLOR_WHITE} {args.host} seq={c} size={args.size} timeout ms{COLOR_RESET}")


def main():
    parser = ArgumentParser()
    parser.add_argument("-l", dest="size",     type=int,   default=56, help="payload size (bytes)")
    parser.add_argument("-t", dest="timeout",  type=float, default=1,  help="request timeout (sec)")
    parser.add_argument("-w", dest="interval", type=float, default=1,  help="request interval (sec)")
    parser.add_argument("-a", dest="alter_fg", action="store_true", default=False, help="color alternate line")
    parser.add_argument("host", help="destination address")

    args = parser.parse_args()

    try:
        verbose_ping(args)
    except KeyboardInterrupt:
        return


if __name__ == "__main__":
    main()
