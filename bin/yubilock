#!/bin/bash

case $1 in
    "true")
        systemctl --user stop --force --no-block i3lock.service
        systemctl --user start --no-block i3lock.service
        ssh gaprao systemctl --user stop --force --no-block i3lock.service
        ssh gaprao systemctl --user start --no-block i3lock.service
        # su mi -c "systemctl --user stop --force --no-block i3lock.service"
        # su mi -c "systemctl --user start --no-block i3lock.service"
        # su mi -c "ssh gaprao systemctl --user stop --force --no-block i3lock.service"
        # su mi -c "ssh gaprao systemctl --user start --no-block i3lock.service"
        ;;
    "false")
        xte 'key Return'
        systemctl --user stop --force --no-block i3lock.service
        ssh gaprao systemctl --user stop --force --no-block i3lock.service
        # su mi -c "xte 'key Return'"
        # su mi -c "ssh gaprao systemctl --user stop --force --no-block i3lock.service"
        # su mi -c "systemctl --user stop --force --no-block i3lock.service"
        ;;
esac

