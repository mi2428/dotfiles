#!/bin/bash

case $1 in
    "true")
        su mi -c "systemctl --user start --no-block i3lock.service" &
        su mi -c "ssh charlotte systemctl --user start --no-block i3lock.service" &
        ;;
    "false")
        su mi -c "systemctl --user stop --no-block i3lock.service" &
        su mi -c "ssh charlotte systemctl --user stop --no-block i3lock.service" &
        ;;
esac
