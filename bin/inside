#!/bin/bash

NICKNAME="$1"
DOCKER_IMAGE="mi2428/dotfiles:latest"
DOCKER_HOSTNAME="dotfiles"

case $NICKNAME in
ubuntu)
  DOCKER_IMAGE="mi2428/ubuntu:latest"
  DOCKER_HOSTNAME="ubuntu"
  ;;
esac

docker run --rm -it \
  -w /work \
  -v ${PWD}:/work \
  -e HOST_UID=$(id -u $USER) \
  -e HOST_GID=$(id -g $USER) \
  --hostname $DOCKER_HOSTNAME \
  --network host \
  $DOCKER_IMAGE
