conky.config = {
    alignment = 'top_right',
    background = true,
    own_window = true,--# set 'yes' to use with compton
    own_window_type = 'override',
    own_window_class = 'Conky',
    -- own_window_transparent yes
    own_window_transparent = false,
    own_window_colour = 'black',
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    own_window_argb_visual = true,
    own_window_argb_value = 100,
    update_interval = 1,
    use_xft = true,
    -- xftfont VLGothic:style=Regular:size=11
    -- xftfont Mono:style=Regular:size=11
    font = 'Ubuntu Mono:style=Regular:size=11',
    -- gap_x = 20,
    -- gap_y = 135,
    gap_x = 20,
    gap_y = 65,
    double_buffer = true,
    uppercase = false,
    maximum_width = 430,
    default_shade_color = 'black',
    draw_shades = true,
};

conky.text = [[
${color #e6e6e6}Summary$hr${color}
${color #d8d8d8}Kernel:${color}${alignr} $sysname $kernel $machine
${color #d8d8d8}JST:${color} ${alignr} ${time %Y/%m/%d %H:%M:%S (%a)}
${color #d8d8d8}UNIX:${color} ${alignr} ${time %s}
${color #d8d8d8}Uptime:${color} ${alignr} $uptime
${color #d8d8d8}LoadAverage:${color} ${alignr} ${loadavg 1 2 3}
${color #d8d8d8}Battery:${color} ${alignr} ${battery BAT0}
${alignc}${battery_bar 10,420}
${color #d8d8d8}Backlight:${color} ${alignr} ${execi 1 echo "scale=3; `cat /sys/class/backlight/intel_backlight/brightness`/852*100" | bc -l }%
${color #d8d8d8}KbdBacklight:${color} ${alignr} ${execi 1 echo "scale=3; `cat /sys/class/leds/tpacpi::kbd_backlight/brightness`/2*100" | bc -l}%
${color #d8d8d8}Volume:${color} ${alignr}${execi 1 ~/.i3/i3blocks/volume.sh}
${color #d8d8d8}FanSpeed:${color} ${alignr} ${execi 1 sensors | \grep "fan1" | awk '{print $2}'}rpm
${color #d8d8d8}CPU1:${color} ${alignr} ${execi 1 sensors | \grep "Core 0" | awk '{print $3}'}
${color #d8d8d8}CPU2:${color} ${alignr} ${execi 1 sensors | \grep "Core 1" | awk '{print $3}'}
${color #d8d8d8}BAT0:${color} ${alignr} ${execi 1 sensors | \grep "temp1" | sed -n 1p | awk '{print $2}'}
${color #d8d8d8}Conky:${color} ${alignr} ${conky_version} (${conky_build_arch})

${color #e6e6e6}CPU Usage $hr${color}
${color #d8d8d8}CPU1:${color} ${cpubar cpu1 10,280} ${cpu cpu1}% ${alignr}${freq_g 0}GHz
${color #d8d8d8}CPU2:${color} ${cpubar cpu2 10,280} ${cpu cpu2}% ${alignr}${freq_g 1}GHz
${color #d8d8d8}CPU3:${color} ${cpubar cpu3 10,280} ${cpu cpu3}% ${alignr}${freq_g 2}GHz
${color #d8d8d8}CPU4:${color} ${cpubar cpu4 10,280} ${cpu cpu4}% ${alignr}${freq_g 3}GHz

${color #e6e6e6}RAM Usage $hr${color}
${color #d8d8d8}RAM:${color}  ${membar 10,280} ${memperc}% ${alignr}${mem}

${color #e6e6e6}SSD Usage $hr${color}
${color #d8d8d8}sda7:${color} ${fs_bar 10,280 /} ${fs_free_perc /}%${alignr}${fs_free /}
${color #d8d8d8}Read:${color} ${alignr}${diskio_read /dev/sda}
${alignc}${diskiograph_read /dev/sda 30,420}
${color #d8d8d8}Write:${color} ${alignr}${diskio_write /dev/sda}
${alignc}${diskiograph_write /dev/sda 30,420}

# ${color #e6e6e6}SD Usage $hr${color}
# ${color #d8d8d8}sdb1: ${alignr}N/A 
# ${color #d8d8d8}Read:${color} ${alignr}${diskio_read /dev/sdb}
# ${alignc}${diskiograph_read /dev/sdb 30,420}
# ${color #d8d8d8}Write:${color} ${alignr}${diskio_write /dev/sdb}
# ${alignc}${diskiograph_write /dev/sdb 30,420}
# 
${color #e6e6e6}System Load $hr${color}
${color #d8d8d8}Processes:${color} ${alignr} ${processes} (Running: ${running_processes})
${color #e6e6e6}TopProcesses(name/pid/cpu/mem/time) ${stippled_hr}${color}
${top name 1} ${alignr} ${top pid 1}${top cpu 1}%${top mem 1}%${top time 1}
${top name 2} ${alignr} ${top pid 2}${top cpu 2}%${top mem 2}%${top time 2}
${top name 3} ${alignr} ${top pid 3}${top cpu 3}%${top mem 3}%${top time 3}
${top name 4} ${alignr} ${top pid 4}${top cpu 4}%${top mem 4}%${top time 4}
${top name 5} ${alignr} ${top pid 5}${top cpu 5}%${top mem 5}%${top time 5}
${alignc}${loadgraph 30,420}

${color #e6e6e6}Network ${hr}${color}
${color #d8d8d8}NameServer:${color} ${alignr}${nameserver}
${color #d8d8d8}OpenPort(TCP):${color} ${alignr}${tcp_portmon 1 65535 count} 
${color #d8d8d8}RemoteLogin:${color} ${alignr}${tcp_portmon 22 22 rip 0}
# ${color #d8d8d8}Global:${color} ${alignr}${execi 1 curl https://mi2428.net/myip}

${color #e6e6e6}Ethernet ${stippled_hr}${color}
${color #d8d8d8}Address:${color} ${alignr}${if_up enp0s31f6}${addr enp0s31f6}${else}N/A${endif}
${color #d8d8d8}Gateway:${color} ${alignr}${if_up enp0s31f6}${gw_ip enp0s31f6}${else}N/A${endif}
${color #d8d8d8}UplinkSpeed:${color} ${alignr} ${upspeedf enp0s31f6}KB
${color #d8d8d8}UploadSize:${color} ${alignr} ${totalup enp0s31f6}
${alignc}${upspeedgraph enp0s31f6 30,420}
${color #d8d8d8}DownlinkSpeed:${color} ${alignr} ${downspeedf enp0s31f6}KB
${color #d8d8d8}DownloadSize:${color} ${alignr} ${totaldown enp0s31f6}
${alignc}${downspeedgraph enp0s31f6 30,420}

${color #e6e6e6}Wi-Fi ${stippled_hr}${color}
${color #d8d8d8}Address:${color} ${alignr}${if_up wlp4s0}${addr wlp4s0}${else}N/A${endif}
${color #d8d8d8}Gateway:${color} ${alignr}${if_up wlp4s0}${gw_ip wlp4s0}${else}N/A${endif}
${color #d8d8d8}Mode:${color} ${alignr} ${if_up wlp4s0}${wireless_mode wlp4s0}${else}N/A${endif}
${color #d8d8d8}ESSID:${color} ${alignr} ${if_up wlp4s0}${wireless_essid wlp4s0}${else}N/A${endif}
${color #d8d8d8}BSSID:${color} ${alignr} ${if_up wlp4s0}${wireless_ap wlp4s0}${else}N/A${endif}
#${color #d8d8d8}${if_up wlp4s0}Quality:${color}${alignr} ${wireless_link_qual_perc wlp4s0}%${else}${color #d8d8d8}Quality:${color}${alignr} N/A${endif}
#${if_up wlp4s0}${alignc}${wireless_link_bar 10,420 wlp4s0}${else}${alignr}N/A$
${color #d8d8d8}UplinkSpeed:${color} ${alignr} ${upspeedf wlp4s0}KB
${color #d8d8d8}UploadSize:${color} ${alignr} ${totalup wlp4s0}
${alignc}${upspeedgraph wifi1 30,420}
${color #d8d8d8}DownlinkSpeed:${color} ${alignr} ${downspeedf wlp4s0}KB
${color #d8d8d8}DownloadSize:${color} ${alignr} ${totaldown wlp4s0}
${alignc}${downspeedgraph wlp4s0 30,420}
]];
