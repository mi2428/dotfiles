    grep = auto

[alias]
    st = status
    ss = status -s
    sh = show
    so = remote show origin
    ft = fetch
    up = pull --rebase
    ad = add
    cc = commit -s
    ck = checkout
    br = branch
    d = diff
    dd = diff HEAD~
    d3 = diff HEAD~2
    d4 = diff HEAD~3
    l = log --decorate --oneline
    ls = log --decorate --oneline --stat
    lg = log --decorate --oneline --stat --graph
    unstage = reset HEAD --
    cancel = reset --soft HEAD^
    url = config --get remote.origin.url

